@echo off
REM ==========================================
REM Otium_wip 后端启动脚本 (Windows批处理)
REM 自动安装依赖并启动热重载开发服务器
REM ==========================================

REM 确保在脚本所在目录运行
cd /d "%~dp0"

echo.
echo ==========================================
echo   Otium_wip 后端启动脚本
echo ==========================================
echo.

REM 检查是否在虚拟环境中
python -c "import sys; print('VIRTUAL_ENV' in sys.__dict__)" >nul 2>&1
if %errorlevel% equ 0 (
    echo [INFO] 已在Python虚拟环境中
) else (
    echo [INFO] 未检测到虚拟环境，使用系统Python
    REM 检查是否有venv目录并尝试激活
    if exist "..\venv\Scripts\activate.bat" (
        echo [INFO] 发现虚拟环境，正在激活...
        call "..\venv\Scripts\activate.bat"
    ) else (
        if exist ".venv\Scripts\activate.bat" (
            echo [INFO] 发现虚拟环境，正在激活...
            call ".venv\Scripts\activate.bat"
        ) else (
            echo [INFO] 未找到虚拟环境，继续使用系统Python
        )
    )
)

REM 检查Python版本
echo.
echo [INFO] 检查Python版本...
python --version

REM 安装/更新依赖
echo.
echo [INFO] 正在安装/更新Python依赖...
pip install --upgrade pip
if exist requirements.txt (
    pip install -r requirements.txt
) else (
    echo [ERROR] 未找到 requirements.txt 文件
    pause
    exit /b 1
)

REM 检查环境变量配置文件
echo.
if exist .env (
    echo [INFO] 找到 .env 文件，已加载环境变量
) else (
    echo [WARNING] 未找到 .env 文件，请复制 .env.example 为 .env 并配置
    if exist .env.example (
        echo [INFO] 找到 .env.example 模板文件
    )
)

REM 启动FastAPI开发服务器（热重载）
echo.
echo ==========================================
echo [INFO] 启动FastAPI开发服务器（热重载模式）
echo [INFO] 服务器将在 http://localhost:8000 运行
echo [INFO] API文档: http://localhost:8000/docs
echo [INFO] 按 Ctrl+C 停止服务器
echo ==========================================
echo.

REM 使用uvicorn启动，启用热重载
uvicorn main:app --host 0.0.0.0 --port 8000 --reload

REM 如果服务器停止，暂停以便查看错误信息
echo.
echo [INFO] 服务器已停止
pause